{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Recap",
  "version": "2.1.0-beta.2",
  "identifier": "com.recap.worklog",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Recap",
        "width": 1200,
        "height": 900,
        "minWidth": 800,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "dmg", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Productivity",
    "shortDescription": "Work tracking and reporting tool",
    "longDescription": "Recap automatically tracks your work from GitLab, Claude Code, and more. Generate reports and sync to Jira Tempo.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": "W736NM7ZBM",
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYzM0I2OTg0QjkxQTVGNDYKUldUMlh3b0V0Rlk1c1lSWVN3VFBZYWo5RVRLczQ5cVdyUHQ2R01tYjFBdDAwUW5lMC9FeHcxa0wK",
      "endpoints": [
        "https://github.com/recap/recap/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
